#!/usr/bin/env node

const yargs = require('yargs/yargs')
const { hideBin } = require('yargs/helpers')

const FileTransfer = require('../lib/FileTransfer')

// command line
FileTransfer(
  yargs(hideBin(process.argv))
    .alias('h', 'help')
    .alias('v', 'version')
    .options('file', {
      alias: 'f',
      type: 'string',
      require: true,
      description: '将被读取的 KeBing 的 Excel。',
    })
    .options('out', {
      alias: 'o',
      type: 'string',
      require: true,
      description: '导出文件。',
    })
    .options('event', {
      alias: 'e',
      type: 'string',
      description: '已存在的"事件变量"列表文件，每行一个"标识符"。',
    })
    .options('point', {
      alias: 'p',
      type: 'string',
      description: '已存在的"埋点事件"列表文件，每行一个"标识符"。',
    })
    .options('prefix', {
      alias: 'r',
      type: 'string',
      description: '"埋点事件"前缀，将生成 "{prefix}_事件Id"',
    })
    .example(
      'kb2gio -f ~/download/KeBing.xlsx -o ~/works/yunji/importToGrowingIO.xlsx',
    )
    .example('kb2gio -f ~/kebin.xlsx -o ~/growingio.xlsx -e ~/eventIDs.txt')
    .example('kb2gio -f ~/kebin.xlsx -o ~/growingio.xlsx -r PC')
    .epilog('copyright (c) 2021 Seven Yu').argv,
)
